<% include ./partials/header %>

<div class="container">
    <div class="row">
        <h1 style="color:white; text-shadow: 2px 2px #000000; text-align: center">Registration</h1>
        <div style="width: 30%; margin: 35px auto;">
            <form action="/register" method="post">
                <div class="form-group">
                    <label style="color:white; text-shadow: 2px 2px #000000;" for="username">Username:</label>
                    <input class="form-control" type="text" name="username" placeholder="username" required autofocus>
                </div>
                <div class="form-group">
                    <label style="text-shadow: 2px 2px #000000; color:white;" for="password">Password:</label>
                    <input class="form-control" type="password" name="password" placeholder="password" required>
                </div>
                <div class="form-group">
                    <label style="color:white; text-shadow: 2px 2px #000000;" for="firstName">First Name:</label>
                    <input class="form-control" type="text" name="firstName" placeholder="First name" required autofocus>
                </div>
                <div class="form-group">
                    <label style="color:white; text-shadow: 2px 2px #000000;" for="lastName">Last Name:</label>
                    <input class="form-control" type="text" name="lastName" placeholder="Last name" required autofocus>
                </div>
                <div class="form-group">
                    <label style="color:white; text-shadow: 2px 2px #000000;" for="email">Email:</label>
                    <input class="form-control" type="email" name="email" placeholder="email" required autofocus>
                </div>
                <div class="form-group">
                    <label style="color:white; text-shadow: 2px 2px #000000;" for="image">Avatar:</label>
                    <input class="form-control" type="text" name="image" placeholder="avatar url" autofocus>
                </div>
                <div class="form-group">
                    <label style="color:white; text-shadow: 2px 2px #000000;" for="adminCode">Admin Code:</label>
                    <input class="form-control" type="text" name="adminCode" placeholder="Admin Code" autofocus>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Register</button>
                </div>
            </form>
            <a href="/nightlife">Go Back</a>
        </div>
    </div>
</div>

<% include ./partials/footer %>