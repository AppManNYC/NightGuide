<% include ../partials/header %>
<div class="container">
  <div class="row">
    <h1 style="text-align: center">Edit <%= nightlife.name %></h1>
    <div style="width: 30%; margin: 25px auto;">
      <form action="/nightlife/<%= nightlife._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="nightlife[name]"
            value="<%= nightlife.name %>"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="nightlife[image]"
            value="<%= nightlife.image %>"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="nightlife[address]"
            value="<%= nightlife.address %>"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="nightlife[city]"
            value="<%= nightlife.city %>"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="nightlife[state]"
            value="<%= nightlife.state %>"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="nightlife[zip]"
            value="<%= nightlife.zip %>"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="nightlife[description]"
            value="<%= nightlife.description %>"
          />
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
      </form>
      <a href="/nightlife">Go Back</a>
    </div>
  </div>
</div>
<% include ../partials/footer %>
