<% include ../partials/header %>
<div class="container">
  <div class="row">
    <h1 style="color:white; text-shadow: 2px 2px #000000; text-align: center">Add New Nightlife</h1>
    <div style="width: 30%; margin: 25px auto;">
      <form action="/nightlife" method="POST">
        <div class="form-group">
          <label style="color:white; text-shadow: 2px 2px #000000;" for="name">Name</label>
          <input
            class="form-control"
            type="text"
            name="name"
            placeholder="Name"
          />
        </div>
        <div class="form-group">
          <label style="color:white; text-shadow: 2px 2px #000000;" for="image">Image</label>
          <input
            class="form-control"
            type="text"
            name="image"
            placeholder="image url"
          />
        </div>
        <div class="form-group">
          <label style="color:white; text-shadow: 2px 2px #000000;" for="address">Address</label>
          <input
            class="form-control"
            type="text"
            name="address"
            placeholder="Address"
          />
        </div>
        <div class="form-group">
          <label style="color:white; text-shadow: 2px 2px #000000;" for="city">City</label>
          <input
            class="form-control"
            type="text"
            name="city"
            placeholder="City"
          />
        </div>
        <div class="form-group">
          <label style="color:white; text-shadow: 2px 2px #000000;" for="state">State</label>
          <input
            class="form-control"
            type="text"
            name="state"
            placeholder="State"
          />
        </div>
        <div class="form-group">
          <label style="color:white; text-shadow: 2px 2px #000000;" for="zip">Zip</label>
          <input
            class="form-control"
            type="text"
            name="zip"
            placeholder="Zip"
          />
        </div>
        <div class="form-group">
          <label style="color:white; text-shadow: 2px 2px #000000;" for="description">Description</label>
          <input
            class="form-control"
            type="text"
            name="description"
            placeholder="Description"
          />
        </div>
        <div class="form-group">
          <button class="btn btn-md btn-primary btn-block">Submit</button>
        </div>
      </form>
      <a href="/nightlife">Go Back</a>
    </div>
  </div>
</div>
<% include ../partials/footer %>
